  # The session secret key (`apg -m 64` is always useful for this kinda stuff)
  cookie_secret: wawmepkobFafcogEikJiucef4boQuicJucpegAkvivkeixraurrirviavElEdwic

  # The path where git repositories are stored. The actual (bare) repositories resides
  # in repository_base_path/#{project.slug}/#{repository.name}.git/:
  repository_base_path: "<%= repository_root %>"

  # Stuff that's in the html <head>. custom stats javascript code etc
  extra_html_head_data:

  # System message that will appear on all pages if present
  system_message: <%= system_message %>

  # Port the ./script/gitorious script should use:
  client_port: 80

  # Host the ./script/gitorious script should use:
  client_host: localhost

  # Host which is serving the gitorious app, eg "gitorious.org"
  host: <%= server_name %>

  # User which is running git daemon
  user: git

  # Email address to the support for the Gitorious server
  gitorious_support_email: <%= support_email %>

  # Email spam on server errors to:
  exception_notification_emails:

  # Mangle visible e-mail addresses (spam protection)
  mangle_email_addresses: true

  # Enable or Disable Public Mode (true) or Private Mode (false)
  public_mode: <%= public_mode %>

  # Define your locale
  locale: en

  # Turn off record throttling
  enable_record_throttling: <%= enable_record_throttling %>

  # Shard & hash repository paths on disk
  enable_repository_dir_sharding: <%= enable_repository_dir_sharding %>

  # Turn on private projects/repositories
  enable_private_repositories: <%= enable_private_repositories %>

  # Make all newly created projects and repos private from the start by default
  projects_default_private: <%= repos_and_projects_private_by_default %>
  repositories_default_private: <%= repos_and_projects_private_by_default %>

  # Where should we store generated tarballs?
  # (should be readable by webserver, since we tell it to send the file using X-Sendfile)
  archive_cache_dir: "<%= tarballs_cache %>"

  # Which directory should we work in when we generate tarballs, before moving
  # them to the above dir?
  archive_work_dir: "<%= tarballs_work %>"

  # is it only site admins who can create new projects?
  enable_project_approvals: false

  # Should we hide HTTP clone urls?
  hide_http_clone_urls: <%= disable_http %> # TODO Remove this option from puppet recipe entirely, see below

  # TODO support these in puppet recipe
  enable_ssh_daemon: true
  enable_git_daemon: true
  enable_git_http: true

  # Use http or https?
  scheme: <%= protocol_scheme %> # TODO fix this in puppet recipe, find old require_ssl, use http/https instead of true/false

  # Is this gitorious.org? Read: should we have a very flashy homepage?
  is_gitorious_dot_org: <%= is_gitorious_org %>

  # Pick a default license
  #default_license: GNU Affero General Public License (AGPLv3)

<% if common_stylesheets %>
  common_stylesheets: <%= common_stylesheets %>
<% end %>
<% if external_stylesheets %>
  external_stylesheets: <%= external_stylesheets %>
<% end %>
<% if favicon_url %>
  favicon_url: <%= favicon_url %>
<% end %>
<% if logo_url %>
  logo_url: <%= logo_url %>
<% end %>
<% if footer_blurb %>
  footer_blurb: <%= footer_blurb %>
<% end %>
<% if additional_view_paths %>
  additional_view_paths: <%= additional_view_paths %>
<% end %>
<% if always_show_ssh_url %>
  always_display_ssh_url: true
<% end %>
<% if custom_username_label %>
  custom_username_label: <%= custom_username_label %>
<% end %>

  messaging_adapter: resque
  frontend_server: nginx